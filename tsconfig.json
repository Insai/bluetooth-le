{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
  },
  "files": ["src/index.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}
